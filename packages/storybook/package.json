{
  "name": "@gm/storybook",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "storybook": "storybook dev -p 6006 --no-open --quiet",
    "storybook:verbose": "storybook dev -p 6006 --no-open",
    "storybook:fast": "storybook dev -p 6006 --no-open --quiet --disable-telemetry",
    "build-storybook": "cd ../ui && npm install && npm run build && cd ../storybook && storybook build",
    "clean": "rm -rf storybook-static node_modules/.cache",
    "reset": "npm run clean && npm install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0-0",
    "@storybook/addon-a11y": "^9.0.2",
    "@storybook/addon-docs": "^9.0.2",
    "@storybook/addon-onboarding": "^9.0.2",
    "@storybook/addon-vitest": "^9.0.2",
    "@storybook/react-vite": "^9.0.2",
    "@types/node": "^22.15.29",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "storybook": "^9.0.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^6.3.5"
  }
}
